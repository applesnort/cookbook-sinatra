<div class="container">
  <div class="row">
    <div class="col-lg-10 col-md-offset-2">
      <form action="/search" method="get">
        <div class="input-group">
          <input type="text" name="query" class="form-control form-control-lg" placeholder="Search for recipe">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit">
              <i class="glyphicon glyphicon-search"></i>
            </button>
          </div>
      </form>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-10 col-md-offset-4">
      <h3>List of recipes</h3>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @recipes.each do |recipe| %>
    <div class="card" style="width: 25rem;" id="cardIndexDisplayList">
      <img class="card-img-top" src="<%= recipe.img %>" alt="Card image cap">
        <div class="card-body">
          <h4 class="card-title"><%= recipe.name %></h4>
          <h6 class="card-subtitle mb-2 text-muted">Prep time : <%= recipe.prep_time %> minutes</h6>
          <p class="card-text"><%= recipe.description %></p>
            <!-- Button trigger modal -->
            <button type="submit" class="btn btn-link" id="delete_link" data-toggle="modal" data-target="#deleteRecipeFromIndex">
              Delete Recipe
            </button>
            <!-- Modal -->
            <div class="modal fade" id="deleteRecipeFromIndex" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="deleteRecipeFromIndexModalTitle">Confirm Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                      </div>
                      <div class="modal-body">
                        Are you sure you want to delete <%= recipe.name %>?
                      </div>
                    <div class="modal-footer">
                    <form action="/delete/<%= recipe.id %>" method="POST">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
    </div>
    <% end %>
  </div>
</div>

