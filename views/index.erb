<div class="container-fluid">
  <div class="row">
      <form action="/search" method="get">
      <div class="input-group">
        <input type="text" name="query" class="form-control form-control-lg" placeholder="Search for recipe">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </div>
      </div>
    </form> 
  </div>
</div>

<div class="container-fluid">
</div>
<h3>List of recipes</h3>
  <div class="container">
    <div class="row">
      <a href="/new" class="btn btn-primary btn-lg">New Recipe</a>
      <% @recipes.each do |recipe| %>
      <% p recipe %>
        <div class="card" style="width: 30rem;">
          <img class="card-img-top" src="<% recipe.img %>" alt="Card image cap">
          <div class="card-body">
            <h4 class="card-title"><%= recipe.name %></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%= recipe.prep_time %></h6>
            <p class="card-text"><%= recipe.description %></p>
        </div>
        <form action="/delete/<%= recipe.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger btn-sm">Delete Recipe</button>
        </form>
      <% end %>
    </div>
  </div>
