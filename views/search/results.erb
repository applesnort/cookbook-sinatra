<h3>Search Results for: `<%= @query %>`</h3>
<form method="post" action="/recipes">
  <div class="container">
    <div class="row">
      <% @web_results.each do |recipe| %>
      <div class="card" style="width: 30rem;">
        <img class="card-img-top" name="img" src="<%= recipe.img[:img] %>" alt="Card image cap">
        <div class="card-body">
        <div class="row">
          <div class="col-lg-8">
            <h3 class="card-title" name="name"><%= recipe.name[:name] %></h3>
            <h6 class="card-subtitle mb-2 text-muted" name="prep_time">Prep time : <%= recipe.prep_time[:prep_time] %></h6>
          </div>
          <div class="col-md-4">
            <button type="submit" class="btn btn-info btn-sm">+ Add to Cookbook</button>
          </div>
        </div>
        </div>
          <p class="card-text" name="description"><%= recipe.description[:description] %></p>
      </div>
    <% end %>
    </div>
  </div>
